<Window x:Class="pamcamkes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pamcamkes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#b040d0">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Pancake ordering" Grid.ColumnSpan="2" FontSize="20" FontWeight="Bold" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="#40ff80"/>
        <TextBox Name="number" Tag="Number of pancakes" Text="Number of pancakes" FontSize="20" VerticalContentAlignment="Center" Grid.Row="1" Margin="10" Padding="5, 0" Background="#0040d0" Foreground="#40ff80"/>
        <TextBox Name="typeD" Tag="Type of dough" Text="Type of dough" FontSize="20" VerticalContentAlignment="Center" Grid.Row="2" Margin="10" Padding="5, 0" Background="#0040d0" Foreground="#40ff80"/>
        <TextBox Name="typeF" Tag="Type of filling" Text="Type of filling" FontSize="20" VerticalContentAlignment="Center" Grid.Row="3" Margin="10" Padding="5, 0" Background="#0040d0" Foreground="#40ff80"/>
        <Button Name="add" Content="Add" FontSize="20" Grid.Row="4" Margin="50, 10" Background="#60e0ff" Foreground="#f02020"/>
        <Button Name="cancel" Content="Cancel" FontSize="20" Grid.Row="5" Margin="50, 10" Background="#60e0ff" Foreground="#f02020"/>
        <ScrollViewer Grid.Column="1" Grid.Row="1" Grid.RowSpan="4" Margin="20" VerticalScrollBarVisibility="Auto">
            <StackPanel Name="panel" Background="#f09000"/>
        </ScrollViewer>
        <Button Name="order" Content="Order" FontSize="20" Grid.Column="1" Grid.Row="5" Margin="50, 10" Background="#60e0ff" Foreground="#f02020"/>
    </Grid>
</Window>
